{% for block in section.blocks %}
  {% if block.settings.slide-img != blank %}
        <img src="{{ block.settings.slide-img | img_url: 'medium'}}" />
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Slider",
  "class": "section-class",
  "settings": [],
  "blocks": [
    {
      "name": "Slide",
      "type": "blocktype",
      "settings": [
        {
          "type": "image_picker",
		  "label": "Select the image",
          "id": "slide-id"
        }
      ]
    }
  ]
}
{% endschema %}