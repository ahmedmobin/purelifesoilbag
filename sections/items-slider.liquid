{% for block in section.blocks %}
  {% if block.settings.slide-img != blank %}
        <img src="{{ block.settings.slide-img | img_url: 'medium'}}" />
  {% endif %}
{% endfor %}
{% schema %}
{
  "name": "Slider",
  "class": "slider-class",
  "settings": [],
  "blocks": [
    {
      "type": "slider",
	  "name": "slide",
      "settings": [
        {
          "id": "slide-img",
          "type": "image_picker",
          "label": "Select Image"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Slider",
      "category": "Custom content"
    }
  ]
}
{% endschema %}