{% for block in section.blocks %}
  {% if block.settings.slide-img != blank %}
        <img src="{{ block.settings.slide-img | img_url: 'medium'}}" />
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Section Name",
  "class": "section-class",
  "settings": [
    {
      "type": "text",
      "id": "section-settings-id",
		"label": "Section label",
      "default": "Section settign default"
    }
  ],
  "blocks": [
    {
      "name": "Block Slide",
      "type": "blocktype",
      "settings": [
        {
          "type": "image_picker",
			"label": "Select the image",
          "id": "image-id"
        }
      ]
    }
  ]
}
{% endschema %}