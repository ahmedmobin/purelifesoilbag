{% for block in section.blocks %}
	<{{ block.settings.title-tag }}>{{ block.settings.header_font_title }}</block.settings.title-tag>
{% endfor %}	
{% schema %}
{
  "name": "Title",
  "class": "slider-section1",
  "settings": [
  	{
		"type": "text",
		"id": "title-heading",
		"label": "Title Heading"
	}
  ],
  "blocks": [
    {
    "type": "titlesettings",
	  "name": "title",
      "settings": [
        {
          "id": "title-tag",
          "type": "text",
          "label": "Tigle Tag"
        },
		{
         "type": "text",
         "id": "header_font_title",
         "label": "More Title"
       }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Title",
      "category": "Custom content"
    }
  ]
}
{% endschema %}