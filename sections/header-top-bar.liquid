<!-- Welcome section starts -->
<section class="welcome">
   <div class="container">
      <div class="welcome-outter">
         {% if section.settings.section-tel != blank %}
         <a href="" class="section-heading">{{ section.settings.section-heading }}</a>
         {% endif %}
         {% if section.settings.section-large-heading != blank %}
         <a href="" class="section-large-heading">{{ section.settings.section-email }}</a>
         {% endif %}
      </div>
   </div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
  "name": "Top Header", // Section name
  "settings": [
        {
          "id": "section-tel",
          "type": "text",
          "label": "Telephone Number",
          "default": "123456789"
        },
        {
          "id": "section-email",
          "type": "text",
          "label": "Email Address",
          "default": "example@example.com"
        }
      ],
      "presets": [
      {
        "name": "Header Top Bar",
        "category": "ADVANCED LAYOUT"
      }
	]
}
{% endschema %}